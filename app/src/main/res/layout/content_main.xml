<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		tools:showIn="@layout/activity_main"
		tools:context=".MainActivity"
		android:id="@+id/mainActivityView">

	<TextView
			android:text="@string/playerClass"
			android:layout_width="122dp"
			android:layout_height="41dp"
			android:id="@+id/classText"
			android:textColor="@color/textColor"
			android:gravity="center"
			android:textSize="14sp"
			android:layout_marginTop="44dp"
			app:layout_constraintTop_toBottomOf="@+id/raceText"
			android:layout_marginStart="8dp"
			app:layout_constraintStart_toStartOf="parent"
			android:textAlignment="textStart"
			android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toStartOf="@+id/classMain"
			app:layout_constraintHorizontal_bias="0.106"/>

	<Spinner
			android:layout_width="120dp"
			android:layout_height="35dp"
			android:id="@+id/classMain"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="42dp"
			android:layout_marginTop="51dp"
			app:layout_constraintTop_toBottomOf="@+id/raceMain"/>

	<Spinner
			android:layout_width="120dp"
			android:layout_height="35dp"
			android:id="@+id/classSecond"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/classMain"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="42dp"
			android:visibility="invisible"/>

	<TextView
			android:layout_width="154dp"
			android:layout_height="99dp"
			android:text="@string/mainLevelNum"
			app:layout_constraintTop_toTopOf="parent"
			android:gravity="center"
			android:id="@+id/mainLevel"
			android:textSize="72sp"
			android:textColor="@color/textColor"
			app:layout_constraintVertical_bias="0.169"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginStart="8dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.497"/>

	<TextView
			android:text="@string/baseLevelNum"
			android:layout_width="70dp"
			android:layout_height="41dp"
			android:id="@+id/baseLevel"
			app:layout_constraintEnd_toStartOf="@+id/baseLevelAdd"
			android:layout_marginEnd="16dp"
			android:layout_marginTop="16dp"
			app:layout_constraintTop_toBottomOf="@+id/mainLevel"
			android:textColor="@color/textColor"
			android:gravity="center"
			android:textSize="24sp"/>

	<TextView
			android:text="@string/baseLevel"
			android:layout_width="122dp"
			android:layout_height="41dp"
			android:id="@+id/baseLevelText"
			android:textColor="@color/textColor"
			android:gravity="center"
			android:textSize="14sp"
			android:layout_marginTop="16dp"
			app:layout_constraintTop_toBottomOf="@+id/mainLevel"
			android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toStartOf="@+id/baseLevelSub"
			android:layout_marginStart="8dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintHorizontal_bias="0.186"
			android:textAlignment="textStart"/>

	<Button
			android:text="@string/levelAdd"
			android:onClick="baseHandler"
			android:textStyle="bold"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:id="@+id/baseLevelAdd"
			android:layout_marginBottom="8dp"
			app:layout_constraintVertical_bias="0.019"
			app:layout_constraintBottom_toBottomOf="parent"
			android:background="@drawable/rounded_button"
			android:textColor="@color/buttonColor"
			app:layout_constraintStart_toEndOf="@+id/mainLevel"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="8dp"
			app:layout_constraintHorizontal_bias="0.671"
			app:layout_constraintTop_toBottomOf="@+id/mainLevel"/>

	<Button
			android:text="@string/levelSub"
			android:onClick="baseHandler"
			android:textStyle="bold"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:id="@+id/baseLevelSub"
			android:layout_marginBottom="8dp"
			app:layout_constraintVertical_bias="0.019"
			app:layout_constraintBottom_toBottomOf="parent"
			android:background="@drawable/rounded_button"
			android:textColor="@color/buttonColor"
			android:layout_marginTop="8dp"
			app:layout_constraintEnd_toStartOf="@+id/baseLevel"
			app:layout_constraintTop_toBottomOf="@+id/mainLevel"
			android:layout_marginEnd="16dp"
			android:saveEnabled="false"/>

	<TextView
			android:text="@string/equipLevelNum"
			android:layout_width="70dp"
			android:layout_height="41dp"
			android:id="@+id/equipLevel"
			app:layout_constraintEnd_toStartOf="@+id/equipLevelAdd"
			android:layout_marginEnd="16dp"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/baseLevel"
			android:textColor="@color/textColor"
			android:gravity="center"
			android:textSize="24sp"/>

	<TextView
			android:text="@string/equipLevel"
			android:layout_width="122dp"
			android:layout_height="41dp"
			android:id="@+id/equipLevelText"
			android:textColor="@color/textColor"
			android:gravity="center"
			android:textSize="14sp"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/baseLevelText"
			android:layout_marginStart="8dp"
			app:layout_constraintStart_toStartOf="parent"
			android:textAlignment="textStart"
			android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toStartOf="@+id/equipLevelSub"
			app:layout_constraintHorizontal_bias="0.186"/>

	<Button
			android:text="@string/levelSub"
			android:onClick="equipmentHandler"
			android:textStyle="bold"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:id="@+id/equipLevelSub"
			android:layout_marginBottom="8dp"
			app:layout_constraintVertical_bias="0.002"
			app:layout_constraintBottom_toBottomOf="parent"
			android:background="@drawable/rounded_button"
			android:textColor="@color/buttonColor"
			android:layout_marginTop="8dp"
			app:layout_constraintEnd_toStartOf="@+id/equipLevel"
			app:layout_constraintTop_toBottomOf="@+id/baseLevelSub"
			android:layout_marginEnd="16dp"/>

	<Button
			android:text="@string/levelAdd"
			android:onClick="equipmentHandler"
			android:textStyle="bold"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:id="@+id/equipLevelAdd"
			android:layout_marginBottom="8dp"
			app:layout_constraintVertical_bias="0.0"
			app:layout_constraintBottom_toBottomOf="parent"
			android:background="@drawable/rounded_button"
			android:textColor="@color/buttonColor"
			app:layout_constraintStart_toEndOf="@+id/mainLevel"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="8dp"
			app:layout_constraintHorizontal_bias="0.671"
			app:layout_constraintTop_toBottomOf="@+id/baseLevelAdd"/>

	<TextView
			android:text="@string/gender"
			android:layout_width="122dp"
			android:layout_height="41dp"
			android:id="@+id/genderText"
			android:textColor="@color/textColor"
			android:gravity="center"
			android:textSize="14sp"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/equipLevelText"
			android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toStartOf="@+id/genderButton"
			android:layout_marginStart="8dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintHorizontal_bias="0.1"
			android:textAlignment="textStart"/>

	<Button
			android:text="@string/maleGender"
			android:onClick="changeGender"
			android:layout_width="80dp"
			android:layout_height="41dp"
			android:id="@+id/genderButton"
			android:textStyle="bold"
			android:textColor="@color/buttonColor"
			app:layout_constraintTop_toBottomOf="@+id/equipLevel"
			android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="parent"
			android:background="@drawable/rounded_button"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="76dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintVertical_bias="0.0"/>

	<TextView
			android:text="@string/moneyAmount"
			android:layout_width="70dp"
			android:layout_height="41dp"
			android:id="@+id/money"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/genderButton"
			android:textColor="@color/textColor"
			android:gravity="center"
			android:textSize="24sp"
			android:layout_marginEnd="16dp"
			app:layout_constraintEnd_toStartOf="@+id/moneyAdd"/>

	<TextView
			android:text="@string/money"
			android:layout_width="70dp"
			android:layout_height="41dp"
			android:id="@+id/moneyText"
			android:textColor="@color/textColor"
			android:gravity="center"
			android:textSize="14sp"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/genderText"
			android:layout_marginStart="8dp"
			app:layout_constraintStart_toStartOf="parent"
			android:textAlignment="textStart"
			android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toStartOf="@+id/moneyLevelUp"
			app:layout_constraintHorizontal_bias="0.2"/>

	<Button
			android:text="@string/moneyLevelUp"
			android:onClick="moneyLevelUp"
			android:textStyle="bold"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:id="@+id/moneyLevelUp"
			android:layout_marginBottom="8dp"
			app:layout_constraintVertical_bias="0.003"
			app:layout_constraintBottom_toBottomOf="parent"
			android:background="@drawable/rounded_button"
			android:textColor="@color/buttonColor"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/genderButton"
			android:layout_marginEnd="16dp"
			app:layout_constraintEnd_toStartOf="@+id/moneySub"
			android:textSize="12sp"
			android:visibility="invisible"/>

	<Button
			android:text="@string/moneySub"
			android:onClick="moneyHandler"
			android:textStyle="bold"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:id="@+id/moneySub"
			android:layout_marginBottom="8dp"
			app:layout_constraintVertical_bias="0.0"
			app:layout_constraintBottom_toBottomOf="parent"
			android:background="@drawable/rounded_button"
			android:textColor="@color/buttonColor"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/genderButton"
			android:layout_marginEnd="16dp"
			app:layout_constraintEnd_toStartOf="@+id/money"/>

	<Button
			android:text="@string/moneyAdd"
			android:onClick="moneyHandler"
			android:textStyle="bold"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:id="@+id/moneyAdd"
			android:layout_marginBottom="8dp"
			app:layout_constraintVertical_bias="0.0"
			app:layout_constraintBottom_toBottomOf="parent"
			android:background="@drawable/rounded_button"
			android:textColor="@color/buttonColor"
			app:layout_constraintStart_toEndOf="@+id/mainLevel"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="8dp"
			app:layout_constraintHorizontal_bias="0.671"
			app:layout_constraintTop_toBottomOf="@+id/genderButton"/>

	<Button
			android:text="@string/classMunch"
			android:onClick="classMunchToggle"
			android:textStyle="bold"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:id="@+id/classMunch"
			android:background="@drawable/rounded_button"
			android:textColor="@color/buttonColor"
			app:layout_constraintStart_toEndOf="@+id/classText"
			android:layout_marginStart="8dp"
			android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/classSecond"
			app:layout_constraintTop_toBottomOf="@+id/classMain"
			app:layout_constraintVertical_bias="0.375"
			android:layout_marginEnd="5dp"
			app:layout_constraintEnd_toStartOf="@+id/classSecond"
			app:layout_constraintHorizontal_bias="1.0"/>

	<Button
			android:text="@string/raceMunch"
			android:onClick="raceMunchToggle"
			android:textStyle="bold"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:id="@+id/raceMunch"
			android:background="@drawable/rounded_button"
			android:textColor="@color/buttonColor"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/raceMain"
			app:layout_constraintBottom_toTopOf="@+id/raceSecond"
			app:layout_constraintStart_toEndOf="@+id/raceText"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="5dp"
			app:layout_constraintEnd_toStartOf="@+id/raceSecond"
			app:layout_constraintHorizontal_bias="1.0"
			app:layout_constraintVertical_bias="0.55"/>

	<TextView
			android:text="@string/playerRace"
			android:layout_width="122dp"
			android:layout_height="41dp"
			android:id="@+id/raceText"
			android:textColor="@color/textColor"
			android:gravity="center"
			android:textSize="14sp"
			android:layout_marginTop="28dp"
			app:layout_constraintTop_toBottomOf="@+id/moneyText"
			android:layout_marginStart="8dp"
			app:layout_constraintStart_toStartOf="parent"
			android:textAlignment="textStart"
			android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toStartOf="@+id/raceMain"
			app:layout_constraintHorizontal_bias="0.111"/>

	<Spinner
			android:layout_width="120dp"
			android:layout_height="35dp"
			android:id="@+id/raceSecond"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/raceMain"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="42dp"
			android:visibility="invisible"/>

	<Spinner
			android:layout_width="120dp"
			android:layout_height="35dp"
			android:id="@+id/raceMain"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/money"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="42dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>